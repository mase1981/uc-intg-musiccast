{
  "driver_id": "uc_intg_yamaha_musiccast",
  "version": "1.0.5",
  "min_core_api": "0.21.0",
  "name": {
    "en": "Yamaha MusicCast"
  },
  "icon": "uc:music",
  "description": {
    "en": "Integration for Yamaha MusicCast audio devices supporting playback control, volume management, and multi-zone audio streaming. Supports multiple devices."
  },
  "developer": {
    "name": "Meir Miyara",
    "email": "meir.miyara@gmail.com"
  },
  "home_page": "https://github.com/mase1981/uc-intg-musiccast",
  "documentation": "https://github.com/mase1981/uc-intg-musiccast/blob/main/README.md",
  "setup_data_schema": {
    "title": {
      "en": "Yamaha MusicCast Device Setup"
    },
    "description": {
      "en": "Configure your Yamaha MusicCast devices. You can set up one or multiple devices."
    },
    "settings": [
      {
        "id": "device_count",
        "label": {
          "en": "Number of Devices"
        },
        "description": {
          "en": "How many MusicCast devices do you want to configure?"
        },
        "field": {
          "number": {
            "value": 1,
            "min": 1,
            "max": 10
          }
        }
      },
      {
        "id": "host",
        "label": {
          "en": "Device IP Address (Single Device Only)"
        },
        "description": {
          "en": "For single device setup only. Enter your MusicCast device IP address (e.g., 192.168.1.100). Leave empty if configuring multiple devices."
        },
        "field": {
          "text": {
            "value": "",
            "placeholder": "192.168.1.100"
          }
        }
      }
    ]
  },
  "release_date": "2025-01-03"
}